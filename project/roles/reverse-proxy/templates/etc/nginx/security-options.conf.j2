# Reference: https://beguier.eu/nicolas/articles/nginx-tls-security-configuration.html

# Only return Nginx in server header
server_tokens off;

#################################################################################################################
# SSL Options
#################################################################################################################

# Reference: options generated by certbot, 2/2024
# Reference: https://beguier.eu/nicolas/articles/nginx-tls-security-configuration.html
# Reference: https://ssl-config.mozilla.org/#server=nginx

{% if reverse_proxy_support_tls12 %}
ssl_protocols TLSv1.2 TLSv1.3;
ssl_ciphers ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-ECDSA-CHACHA20-POLY1305:ECDHE-RSA-CHACHA20-POLY1305:DHE-RSA-AES128-GCM-SHA256:DHE-RSA-AES256-GCM-SHA384:DHE-RSA-CHACHA20-POLY1305;
ssl_dhparam /etc/nginx/ssl/public/dhparams.pem;
{% else %}
ssl_protocols TLSv1.3;
{% endif %}

# The "ssl_prefer_server_ciphers" directive tells the server to use its own list of preferred ciphers, rather than relying on the client to specify them.
# Perfect Forward Secrecy(PFS) is frequently compromised without this
ssl_prefer_server_ciphers on;

ssl_session_tickets off;
ssl_session_timeout 1440m;
ssl_session_cache shared:le_nginx_SSL:10m;

# The "ssl_buffer_size" directive sets the size of the buffer used for sending data over SSL.
# By default, the buffer size is 16k, which corresponds to minimal overhead when sending big responses.
# To minimize Time To First Byte it may be beneficial to use smaller values
ssl_buffer_size 8k; 

# The "ssl_stapling" and "ssl_stapling_verify" directives enable OCSP (Online Certificate Status Protocol) 
# stapling, which is a method of checking the revocation status of SSL certificates without the need for a 
# separate request to the certificate authority. This helps to improve performance by reducing the number 
# of requests that need to be made.
ssl_stapling on;
ssl_stapling_verify on;

#################################################################################################################
# HTTP(S) Options
#################################################################################################################

# Reference: https://beguier.eu/nicolas/articles/nginx-tls-security-configuration.html

# Security headers

# X-Content-Type-Options: avoid MIME type sniffing
proxy_hide_header X-Content-Type-Options;
add_header X-Content-Type-Options nosniff;

# Strict Transport Security (HSTS): Yes
proxy_hide_header Strict-Transport-Security;
add_header Strict-Transport-Security "max-age=31536000; includeSubdomains; preload";